[Unit]
Description=Forward connection to SSH over Qrexec
After=qubes-sysinit.service
ConditionPathExists=/var/run/qubes-service/ssh-setup

[Socket]
ListenStream=127.0.0.1:840
BindToDevice=lo
Accept=true

[Install]
WantedBy=multi-user.target

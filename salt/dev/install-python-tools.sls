{% if grains['nodename'] != 'dom0' -%}

include:
  - utils.tools.common.update

"{{ slsdotpath }}-installed-python-tools":
  pkg.installed:
    - require:
      - sls: utils.tools.common.update
    - install_recommends: False
    - skip_suggestions: True
    - setopt: "install_weak_deps=False"
    - pkgs:
      - python3-dev
      - python3-venv
      - python3-setuptools
      - python3-pytest
      - python3-pip
      - black
      - mypy
      - pylint

{% endif %}

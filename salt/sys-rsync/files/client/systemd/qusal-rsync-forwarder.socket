[Unit]
Description=Forward Rsync connection over Qrexec
After=qubes-sysinit.service
ConditionPathExists=/var/run/qubes-service/rsync-client

[Socket]
ListenStream=127.0.0.1:1839
BindToDevice=lo
Accept=true

[Install]
WantedBy=multi-user.target

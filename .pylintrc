[MAIN]

jobs=0


[FORMAT]

expected-line-ending-format=LF
max-line-length=79


[LOGGING]

logging-format-style=new


[MESSAGES CONTROL]

confidence=


[REPORTS]

output-format=colorized
reports=no


[STRING]

check-quote-consistency=yes
check-str-concat-over-line-jumps=yes
